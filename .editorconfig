# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

[*.json]
indent_size = 2

[*.properties]
indent_size = 2

[*.{java,kt}]
indent_size = 4

[*.xml]
indent_size = 2

[*.js,.ts,.tsx,.jsx]
indent_size = 2

[*.css,.scss,.html]
indent_size = 2
